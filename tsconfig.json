{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "allowJs": true, // JS ファイルを TypeScript として扱えるようにする
    "checkJs": true, // JS ファイルでのエラーをチェックする
    "jsx": "preserve",
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true, // 厳格な型チェックを有効にする
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.js", "src/**/*.vue"]
}
